{
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "tsx": true,
      "modules": true,
    },
  },
  "plugins": ["react", "import", "react-hooks", "prettier", "tsx-ally"],
  "env": {
    "es6": true,
    "browser": true,
    "jest": true,
    "node": true,
  },
  "settings": {
    "react": {
      "version": "detect",
    },
  },
}
